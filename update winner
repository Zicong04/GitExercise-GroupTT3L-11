<body>
    <h1>Update Winners</h1>
    <div class="form-group">
        <label for="winner-name">Winner Name:</label>
        <input type="text" id="winner-name">
    </div>
    <div class="form-group">
        <label for="prize">Prize:</label>
        <input type="text" id="prize">
    </div>
    <button onclick="updateWinner()">Update Winner</button>

    <script>
        function updateWinner() {
            // Get the values from the input fields
            var winnerName = document.getElementById('winner-name').value;
            var prize = document.getElementById('prize').value;

            // Update the winner information (this is a simplified example)
            alert('Winner updated: ' + winnerName + ' - ' + prize);
        }
    </script>
